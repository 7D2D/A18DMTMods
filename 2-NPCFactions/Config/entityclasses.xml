<configs>

<!--  Edits to convert zombies to Faction based targeting for whisperers -->

		<set xpath="//entity_class[starts-with(@name, 'zombieTemplate')]/property[@value='SetNearestEntityAsTarget']/@data">class=EntityPlayer,0,0,EntityAlive,0,0</set> 
		
<!-- Edits to make a few NPC groups join factions other than whiteriver  -->

		<set xpath="//entity_class[starts-with(@name, 'NPCRaider')]/property[@name='Faction']/@value">bandits</set>
		<set xpath="//entity_class[starts-with(@name, 'NPCGhost')]/property[@name='Faction']/@value">whisperers</set>
		<set xpath="//entity_class[starts-with(@name, 'NPCGupSoldier')]/property[@name='Faction']/@value">redteam</set>
		<set xpath="//entity_class[starts-with(@name, 'NPCDelta')]/property[@name='Faction']/@value">blueteam</set>
		<set xpath="//entity_class[starts-with(@name, 'NPCRanger')]/property[@name='Faction']/@value">blueteam</set>
		<set xpath="//entity_class[starts-with(@name, 'NPCNational')]/property[@name='Faction']/@value">greenteam</set>
		<set xpath="//entity_class[starts-with(@name, 'NPCArmy')]/property[@name='Faction']/@value">greenteam</set>
		
<!--  Edits to convert Mechs to Faction based targeting ( They are already in this faction but this is here in case we want things to change  -->	

		<!--<set xpath="//entity_class[starts-with(@name, 'NPCMech')]/property[@name='Faction']/@value">mechs</set>	-->
		
</configs>